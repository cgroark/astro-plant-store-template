---
import Layout from '../layouts/Layout.astro';
import {PhoneOutgoingIcon, WhatsappLogoIcon, EnvelopeIcon} from '@phosphor-icons/react';

// Import all sections
const heroContent = await import('../content/sections/hero.md');
const aboutContent = await import('../content/sections/about.md');
const coachingContent = await import ('../content/sections/coaching.md');
const methodsContent = await import('../content/sections/methods.md');
const contactContent = await import('../content/sections/contact.md');
const footerContent = await import('../content/sections/footer.md');
const navContent = await import('../content/navigation/main.md');
const navigation = navContent.frontmatter;

const hero = heroContent.frontmatter;
const about = aboutContent.frontmatter;
const coaching = coachingContent.frontmatter;
const methods = methodsContent.frontmatter;
const footer = footerContent.frontmatter;
const contact = contactContent.frontmatter;
---

<Layout title={hero.title}>
  <!-- Navigation -->
  <nav class="main-nav">
    <div class="nav-container">
      <ul class="nav-links">
				<li>
				<a href="#hero" class="logo-nav">
					<img src={navigation.logo} />
					</a>
				</li>
        {navigation.nav_items.map(item => (
          <li><a href={item.href}>{item.label}</a></li>
        ))}
      </ul>
    </div>
  </nav>

  <!-- Hero Section -->
  <section id="hero" class="hero-section">
    <div class="hero-title">
			<h1>{hero.title}</h1>
			<div>
				<h2>{hero.subtitle}</h2>
				<hr>
				<p>{hero.description}</p>
				<a
					class="cta-button hero"
					href={hero.cta}
					target="_blank"
				>
					{hero.ctaText}
				</a>
			</div>
		</div>
		<div class="background-cover-image"
			style={hero.background_image ? `background-image: url(${hero.background_image})`  : ''}
		>
		</div>
  </section>

  <!-- About Section -->
  <section id="about" class="about-section">
		<div class="about-title">
    	<h2>{about.title}</h2>
			<hr>
			<aboutContent.Content />
		</div>
		<div class="about-image"
			style={about.image ? `background-image: url(${about.image})`  : ''}
		>
  </section>

	<!-- Coaching Section -->
  <section id="coaching" class="coaching-section"
	 style={coaching.image ? `background-image: url(${coaching.image})`  : ''}
	>
		<div class="coaching-content">
			<coachingContent.Content />
		</div>
  </section>

	<!-- Methods Section -->
  <section id="methods" class="methods-section">
		{methods.method_items.map(item => (
			<div class="method-part">
				<div class="methods-image"
					style={item.image ? `background-image: url(${item.image})`  : ''}
					>
				</div>
				<h3>{item.title}</h3>
				<p>{item.text}</p>
			</div>
		))}
  </section>

	<!-- Contact Section -->
  <section id="contact" class="contact-section">
		<h2>{contact.title}</h2>
		<hr>
		<div class="contact-content">
			<div>
				<a href="tel:{contact.phone}">
					<PhoneOutgoingIcon size={32} />
					{contact.phoneString}
				</a>
			</div>
			<div>
				<a href="tel:{contact.phone}">
					<WhatsappLogoIcon size={32} />
					{contact.phoneString}
				</a>
			</div>
			<div>
				<a href="mailto:{contact.email}">
					<EnvelopeIcon size={32} />
					{contact.email}
				</a>
			</div>
		</div>
		<a
			class="cta-button"
			href={contact.cta}
			target="_blank"
		>
			{contact.ctaText}
		</a>
  </section>

		<!-- Footer Section -->
		<section id="footer" class="footer-section">
			<h3>{footer.title}</h3>
			<p>{footer.copyright}</p>
			<p>{footer.owner} <a href={footer.ownerLink} target="_blank">{footer.ownerSite}</a></p>
		</section>
</Layout>

<script>
(() => {
  const sections = document.querySelectorAll('section[id]');
  if (!sections.length) return;

  const ids = new Set([...sections].map(s => s.id));

  const getNavLinks = () =>
    Array.from(document.querySelectorAll('a[href^="#"]'))
      .filter(a => ids.has(decodeURIComponent(a.getAttribute('href').slice(1))));

  const clearActive = () => getNavLinks().forEach(a => a.classList.remove('active'));
  const setActive = (id) => {
    getNavLinks()
      .filter(a => decodeURIComponent(a.getAttribute('href').slice(1)) === id)
      .forEach(a => a.classList.add('active'));
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        clearActive();
        setActive(entry.target.id);
      }
    });
  }, {
    root: null,
    rootMargin: `-${document.querySelector('.main-nav')?.offsetHeight || 80}px 0px -60% 0px`,
    threshold: 0.1
  });

  sections.forEach(section => observer.observe(section));
})();
</script>



<style>
	.hero-section {
		background: #1b262c;
		display: flex;
	}

	.hero-title {
		color: rgb(249, 244, 218);
		padding: 60px 50px 20px;
		width: 28%;
		z-index: 2;
	}

	h1 {
		font-size: 54px;
		color: rgb(249, 244, 218);
		white-space: nowrap;
		margin-bottom: 30px;
	}

	.hero-title h2, .about-title h2 {
		font-size: 42px;
		white-space: nowrap;
	}

	.hero-title hr, .about-title hr {
		height: 6px;
		background: #4682b4;
		border: #4682b4;
		margin: 20px 85px 20px 0;
	}

	.hero-title div {
		display: flex;
		flex-direction: column;
		justify-content: center;
		height: 85%;
	}

	.background-cover-image {
		width: 72%;
		background-size: cover;
		background-position: 40% center;
		background-repeat: no-repeat;
		min-height: 500px;
	}

	.about-section, .methods-section {
		display: flex;
		justify-content: space-between;
		align-items: stretch;
		gap: 10px;
		background-color: #1c3549;
		color: rgb(249, 244, 218);
		padding: 70px 50px;
	}

	.about-title {
		width: 50%;
	}

	.about-image {
		width: 50%;
		background-size: cover;
		background-position: 40% center;
		background-repeat: no-repeat;
	}

	.coaching-section {
		position: relative;
		padding: 50px;
		background-size: cover;
		background-position: 40% center;
		background-repeat: no-repeat;
		background-attachment: fixed;
		min-height: 50vh;
		display: flex;
		align-items: center;
		justify-content: flex-start;
		min-height: 70vh;
	}

	.coaching-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(to right, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.7) 50%, transparent 100%);
		z-index: 1;
	}

	.coaching-content {
		position: relative;
		z-index: 2;
		max-width: 460px;
		color: rgb(249, 244, 218);
	}

	.method-part {
		text-align: center;
		width: 31%;
	}

	.method-part h3 {
		margin-bottom: 10px;
	}

	.methods-image {
		background-size: cover;
		background-position: 40% center;
		background-repeat: no-repeat;
		height: 128px;
		width: 128px;
		border-radius: 50%;
		margin: auto;
		margin-bottom: 25px;
		transition: 200ms cubic-bezier(0.25, 0.1, 0.25, 1);
	}

	.methods-image:hover {
		transform: scale(1.1);
	}

	.contact-section {
		padding: 70px 20px 50px 20px;
		background-color: #1b262c;
		min-height: 80vh;
	}

	.contact-section h2 {
		font-size: 36px;
		text-align: center;
		color: rgb(249, 244, 218);
	}

	.contact-section hr {
		height: 6px;
		background: #4682b4;
		border: #4682b4;
		width: 30%;
		margin: 25px auto;
	}

	.contact-content {
		justify-content: center;
		display: flex;
		flex-wrap: wrap;
		max-width: 700px;
		margin: auto;
	}

	.contact-content div a {
		display: flex;
		align-items: center;
		gap: 5px;
		color: rgb(249, 244, 218);
		text-decoration: none;
		margin-bottom: 10px;
		padding: 5px 10px;
		transition: 200ms cubic-bezier(0.25, 0.1, 0.25, 1);
	}

	.contact-content div a:hover {
		transform: scale(1.1);
	}

	.contact-content a::after {
		content: '';
		position: absolute;
		bottom: -5px;
		left: 0;
		width: 0;
		height: 2px;
		background: #4682b4;
		transition: width 0.3s ease;
	}

	.contact-content a:hover::after {
		width: 100%;
	}

	.cta-button {
		background: #4682b4;
		border: solid 2px transparent;
		padding: 10px 10px;
		color: rgb(249, 244, 218);
		text-decoration: none;
		display: block;
		margin: 20px auto;
		width: fit-content;
		border-radius: 5px;
		display: flex;
		align-items: center;
		gap: 5px;
		transition: background 0.3s ease-in-out, border 0.3s ease-in-out;
	}

	.cta-button:hover {
		background: #23435e;
		border: solid 2px rgb(249, 244, 218);
	}

	.cta-button.hero {
		margin: 40px 0;
	}

	.footer-section {
		background-color: #1b262c;
		color: rgb(249, 244, 218);
		padding: 20px;
		text-align: center;
	}

	.footer-section h3 {
		margin-bottom: 5px;
		font-size: 16px;
	}

	.footer-section p {
		font-size: 12px;
	}

	.footer-section a {
		color: rgb(249, 244, 218);
	}

	.main-nav {
		position: fixed;
		top: 0;
		width: 100%;
		background: rgba(27, 38, 44, 0.45);
		backdrop-filter: blur(10px);
		z-index: 1000;
		transition: all 0.3s ease;
	}

	.nav-container {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: end;
		align-items: center;
		padding: 1rem 2rem;
	}

	.nav-links {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 1rem;
	}

	.nav-links a {
		color: #4682b4;
		text-decoration: none;
		font-family: 'Open Sans', sans-serif;
		font-weight: 600;
		transition: all 0.3s ease;
		position: relative;
	}

	.nav-links a:hover,
	.nav-links a.active {
		color: rgb(249, 244, 218);
	}

	.nav-links a::after {
		content: '';
		position: absolute;
		bottom: -5px;
		left: 0;
		width: 0;
		height: 2px;
		background: #4682b4;
		transition: width 0.3s ease;
	}

	.nav-links a:hover::after,
	.nav-links a.active::after {
		width: 100%;
	}

	.logo-nav img {
		width: 30px;
		height: 30px;
		border-radius: 50%
	}

	.nav-links a.logo-nav::after {
		bottom: -1px;
	}

	@media (max-width: 768px) {
		.hero-section {
			min-height: 100vh;
		}

		.hero-title {
			width: 90%;
			padding: 60px 20px;
		}

		.hero-title h1 {
			font-size: 44px;
		}

		.hero-title h2, .about-title h2 {
			font-size: 36px;
			white-space: normal;
		}

		.background-cover-image {
			position: absolute;
			right: 0;
			top: 0;
			width: 66%;
			height: 100%;
			min-height: 100vh;
		}

		.about-section {
			padding: 0 0 0 20px;
		}

		.about-title {
			padding: 50px 10px;
			width: 90%;
		}

		.about-image {
			min-height: 60vh;
		}

		.coaching-section {
			background-attachment: scroll; /* fallback */
			background-position: center;
			background-size: cover;
			height: 100vh;
		}

		.coaching-section::before {
			background: linear-gradient(rgba(0,0,0,0.5) 0%,rgba(0,0,0,0.7));
		}

		.methods-section {
			flex-wrap: wrap;
		}

		.method-part {
			width: 100%;
			margin-bottom: 40px;
		}

		.contact-section {
			height: 100vh;
		}

		.contact-content {
			justify-content: center;
		}

		.nav-container {
			padding: 10px 20px ;
		}

		.nav-links a {
			font-size: 16px;
		}

		.nav-links a:hover {
			color: #4682b4;
		}

		.nav-links a:hover::after {
			background: transparent;
		}

		.nav-links a.active {
			color: rgb(249, 244, 218);
			background: transparent;
		}

		.nav-links a.active::after {
			background: #4682b4;
		}


	}
</style>