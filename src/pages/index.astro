---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

// Read the home page content
const homeContent = await import('../content/home.md');
const { title, description, hero_image } = homeContent.frontmatter;
const { Content } = homeContent;
---

<Layout title={title}>
  <main>
    <h1>{title}</h1>
    <p>{description}</p>
    {hero_image && <img src={hero_image} alt="Hero image" />}
    <Content />
  </main>
</Layout>