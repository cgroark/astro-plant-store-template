---
import Layout from '../layouts/Layout.astro';
import {PhoneOutgoingIcon, EnvelopeIcon} from '@phosphor-icons/react';

// Import all sections
const heroContent = await import('../content/sections/hero.md');
const aboutContent = await import('../content/sections/about.md');
const parallaxContent = await import ('../content/sections/parallax.md');
const imagesContent = await import('../content/sections/images.md');
const contactContent = await import('../content/sections/contact.md');
const footerContent = await import('../content/sections/footer.md');
const navContent = await import('../content/navigation/main.md');
const navigation = navContent.frontmatter;

const hero = heroContent.frontmatter;
const about = aboutContent.frontmatter;
const parallax = parallaxContent.frontmatter;
const images = imagesContent.frontmatter;
const footer = footerContent.frontmatter;
const contact = contactContent.frontmatter;
---

<Layout title={hero.title}>
  <!-- Navigation -->
  <nav class="main-nav">
    <div class="nav-container">
      <ul class="nav-links">
				<li>
				<a href="#hero" class="logo-nav">
					<img src={navigation.logo} />
					</a>
				</li>
        {navigation.nav_items.map(item => (
          <li><a href={item.href}>{item.label}</a></li>
        ))}
      </ul>
    </div>
  </nav>

  <!-- Hero Section -->
  <section id="hero" class="hero-section section"
	>
    <div class="hero-title">
			<h1>{hero.title}</h1>
			<div>
				<p>{hero.description}</p>
			</div>
			<img src={hero.img} />
		</div>
  </section>

	<section id="about">
		<!-- About Section -->
		<section class="about-section section">
			<div class="about-title">
				<h2>{about.title}</h2>
				<div class="about-text">
					<aboutContent.Content />
				</div>
			</div>
			<img class="about-image" src={about.image} />
		</section>

		<!-- Parallax Section -->
		<section  class="parallax-section"
		style={parallax.image ? `background-image: url(${parallax.image})`  : ''}
		>
			<div class="parallax-content">
				<parallaxContent.Content />
			</div>
		</section>
	</section>

	<!-- Images Section -->
  <section id="images" class="images-section section">
		{images.image_items.map(item => (
			<div class="image-part">
				<div class="images-image"
					style={item.image ? `background-image: url(${item.image})`  : ''}
					>
				</div>
				<h3>{item.title}</h3>
				<p>{item.text}</p>
			</div>
		))}
  </section>

	<!-- Contact Section -->
  <section id="contact" class="contact-section section">
		<h2>{contact.title}</h2>
		<div class="contact-content">
			<div>
				<a href="tel:{contact.phone}">
					<PhoneOutgoingIcon size={32} />
					{contact.phoneString}
				</a>
			</div>
			<div>
				<a href="mailto:{contact.email}">
					<EnvelopeIcon size={32} />
					{contact.email}
				</a>
			</div>
		</div>
		<a
			class="cta-button"
			href={contact.cta}
			target="_blank"
		>
			{contact.ctaText}
		</a>
  </section>

	<!-- Footer Section -->
	<section id="footer" class="footer-section">
		<h3>{footer.title}</h3>
		<p>{footer.copyright}</p>
		<p>{footer.owner} <a href={footer.ownerLink} target="_blank">{footer.ownerSite}</a></p>
	</section>
</Layout>

<script>
(() => {
  const sections = document.querySelectorAll('section[id]');
  if (!sections.length) return;

  const ids = new Set([...sections].map(s => s.id));

  const getNavLinks = () =>
    Array.from(document.querySelectorAll('a[href^="#"]'))
      .filter(a => ids.has(decodeURIComponent(a.getAttribute('href').slice(1))));

  const clearActive = () => getNavLinks().forEach(a => a.classList.remove('active'));
  const setActive = (id) => {
    getNavLinks()
      .filter(a => decodeURIComponent(a.getAttribute('href').slice(1)) === id)
      .forEach(a => a.classList.add('active'));
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        clearActive();
        setActive(entry.target.id);
      }
    });
  }, {
    root: null,
    rootMargin: `-${document.querySelector('.main-nav')?.offsetHeight || 80}px 0px -60% 0px`,
    threshold: 0.1
  });

  sections.forEach(section => observer.observe(section));
})();
</script>



<style>

	.hero-section, .about-section, .images-section, .contact-section {
		padding: 100px 50px;
		background-color: #231f20;
	}

	.hero-title {
		color: rgb(249, 244, 218);
		text-align: center;
		padding: 50px 30px;
		max-width: 460px;
		margin: auto ;
		border: solid 4px #fcba28;
		background-color: #7b5ea6;
		border-radius: 10px;
		box-shadow: 8px 8px 0 #15aa93;
	}

	h1 {
		font-size: 54px;
		color: rgb(249, 244, 218);
		white-space: nowrap;
		margin-bottom: 10px;
	}

	.hero-title p {
		color: #7b5ea6;
    background: rgb(249, 244, 218);
    padding: 10px 15px;
    border-radius: 10px;
    margin-top: 20px;
	}

	.hero-title img {
		max-width: 70px;
		margin-top: 30px;
	}

	.cta-button {
		display: block;
		margin: 40px auto;
		background: #15aa93;
		border: solid 2px transparent;
		padding: 10px 15px;
		color: #231f20;
		text-decoration: none;
		display: block;
		margin: 20px auto;
		width: fit-content;
		border-radius: 5px;
		display: flex;
		align-items: center;
		gap: 5px;
		transition: background 0.3s ease-in-out, border 0.3s ease-in-out, color 0.3s ease-in-out;
	}

	.cta-button:hover {
		background: #0c7565;
		border: solid 2px rgb(249, 244, 218);
		color: rgb(249, 244, 218);
	}

	.about-section, .images-section {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		align-items: center;
		gap: 10px;
		border-top: solid 10px #7b5ea6;
		color: rgb(249, 244, 218);
		padding: 70px 50px;
	}

	.about-title h2 {
		font-size: 42px;
		white-space: nowrap;
		padding-bottom: 20px;
		border-bottom: 4px solid #15aa93;
		margin-bottom: 20px;
	}

	.about-title {
		width: 50%;
	}

	.about-image {
		border: solid 4px #fcba28;
		border-radius: 10px;
		box-shadow: 8px 8px 0 #7b5ea6;
		max-width: 410px;
    width: 100%;
    margin: 0 auto 50px;
	}

	.parallax-section {
		border-top: solid 10px #7b5ea6;
		position: relative;
		padding: 50px;
		background-size: cover;
		background-position: 40% center;
		background-repeat: no-repeat;
		background-attachment: fixed;
		min-height: 70vh;
		display: flex;
		align-items: center;
		justify-content: flex-start;
	}

	.parallax-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(to right, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.2) 20%, transparent 100%);
		z-index: 1;
	}

	.parallax-content {
		z-index: 2;
		margin: auto;
		font-size: 48px;
		color: #7b5ea6;
    background: rgb(249, 244, 218);
    padding: 10px 15px;
    border-radius: 10px;
		border: solid 4px #fcba28;
		box-shadow: 8px 8px 0 #15aa93;
	}

	.image-part {
		text-align: center;
		width: 31%;
	}

	.image-part h3 {
		margin-bottom: 10px;
	}

	.images-image {
		background-size: cover;
		background-position: 40% center;
		background-repeat: no-repeat;
		height: 278px;
		width: 278px;
		margin: auto;
		margin-bottom: 25px;
		transition: 200ms cubic-bezier(0.25, 0.1, 0.25, 1);
		border: solid 4px #fcba28;
		border-radius: 10px;
		box-shadow: 8px 8px 0 #7b5ea6;
	}

	.images-image:hover {
		transform: scale(1.1);
	}

	.contact-section {
		border-top: solid 10px #7b5ea6;
		min-height: 60vh;
	}

	.contact-section h2 {
		text-align: center;
		color: rgb(249, 244, 218);
		font-size: 42px;
		padding-bottom: 20px;
		border-bottom: 4px solid #fcba28;
		width: fit-content;
		margin: 20px auto;
	}

	.contact-content {
		justify-content: center;
		display: flex;
		flex-wrap: wrap;
		max-width: 700px;
		margin: auto;
	}

	.contact-content div a {
		display: flex;
		align-items: center;
		gap: 5px;
		color: rgb(249, 244, 218);
		text-decoration: none;
		margin-bottom: 10px;
		padding: 5px 10px;
		transition: 200ms cubic-bezier(0.25, 0.1, 0.25, 1);
	}

	.contact-content div a:hover {
		transform: scale(1.1);
	}

	.contact-content a::after {
		content: '';
		position: absolute;
		bottom: -5px;
		left: 0;
		width: 0;
		height: 2px;
		background: #fcba28;
		transition: width 0.3s ease;
	}

	.contact-content a:hover::after {
		width: 100%;
	}

	.footer-section {
		background-color: #231f20;
		color: rgb(249, 244, 218);
		padding: 20px;
		text-align: center;
	}

	.footer-section h3 {
		margin-bottom: 5px;
		font-size: 16px;
	}

	.footer-section p {
		font-size: 12px;
	}

	.footer-section a {
		color: rgb(249, 244, 218);
	}

	.main-nav {
		position: fixed;
		top: 0;
		width: 100%;
		background: rgba(27, 38, 44, 0.45);
		backdrop-filter: blur(10px);
		z-index: 1000;
		transition: all 0.3s ease;
	}

	.nav-container {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: end;
		align-items: center;
		padding: 1rem 2rem;
	}

	.nav-links {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 1rem;
	}

	.nav-links a {
		color: rgb(249, 244, 218);
		text-decoration: none;
		font-family: "Poppins", sans-serif;
    font-weight: 300;
		transition: all 0.3s ease;
		position: relative;
	}

	.nav-links a:hover,
	.nav-links a.active {
		color: #15aa93;
	}

	.nav-links a::after {
		content: '';
		position: absolute;
		bottom: -5px;
		left: 0;
		width: 0;
		height: 3px;
		background: #fcba28;
		transition: width 0.3s ease;
	}

	.nav-links a:hover::after,
	.nav-links a.active::after {
		width: 100%;
	}

	.logo-nav img {
		width: 30px;
		height: 30px;
		border-radius: 50%
	}

	.nav-links a.logo-nav::after {
		bottom: -1px;
	}

	@media (max-width: 768px) {

		.section {
			padding: 50px 20px;
		}

		.hero-section {
			min-height: 100vh;
			padding-top: 120px;
		}

		.hero-title h1 {
			font-size: 44px;
		}

		.hero-title h2, .about-title h2 {
			font-size: 36px;
			white-space: normal;
		}

		.hero-section p {
			font-size: 16px;
		}

		.about-title {
			padding: 50px 10px;
			width: 100%;
		}

		.about-text {
			font-size: 16px;
		}

		.about-image {
			max-width: unset;
		}

		.parallax-section {
			background-attachment: scroll; /* fallback */
			background-position: center;
			background-size: cover;
			height: 100vh;
		}

		.parallax-section::before {
			background: linear-gradient(rgba(0,0,0,0.5) 0%,rgba(0,0,0,0.7));
		}

		.images-section {
			flex-wrap: wrap;
		}

		.image-part {
			width: 100%;
			margin-bottom: 40px;
		}

		.image-part p {
			font-size: 16px;
		}

		.contact-section {
			height: 50vh;
		}

		.contact-content {
			justify-content: center;
		}

		.nav-container {
			padding: 10px 20px;
			justify-content: space-evenly;
		}

		.nav-links a {
			font-size: 16px;
		}

		.nav-links a:hover {
			color: #15aa93;
		}

		.nav-links a:hover::after {
			background: transparent;
		}

		.nav-links a.active {
			color: rgb(249, 244, 218);
			background: transparent;
		}

		.nav-links a.active::after {
			background: #15aa93;
		}
	}
</style>